{
    "manifest_version": 2,
    "name": "Budget manager",
    "version": "1.0",
    "description": "This extension tracks your overall spendings",
    "browser_action": {
        "default_popup": "popup.html"
    },
    "options_page": "options.html", 
    "background": {
        "scripts": [
            "eventPage.js"
        ],
        "persistent": false
    },
    "permissions": [
        "storage",
        "notifications",
        "contextMenus"
    ]
}